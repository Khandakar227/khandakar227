---
const {height, progress} = Astro.props;

---

<div class="progress" style={`height:${height || '10px'}`}>
    <div class="progress-bar" style={`width:${progress};height:10px`}></div>
</div>

<style>
.progress {
    height: 1rem;
    line-height: 0;
    font-size: .75rem;
    background-color: #d0d0d0;
    border-radius: .25rem;
    width: 100%;
}
.progress-bar {
    -ms-flex-direction: column;
    flex-direction: column;
    -ms-flex-pack: center;
    justify-content: center;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    background-color: #b20000;
    transition: width .6s ease;
}
.progress, .progress-bar {
    display: -ms-flexbox;
    display: flex;
    overflow: hidden;
}
</style>